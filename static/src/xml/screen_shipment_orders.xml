                                                    <i class="fa fa-sort"/>
                                                </th> -->
                                                <th>
                                                    <a href="#" class="sort sort_by_pos_order_partner_name">Partner</a>
                                                    <i class="fa fa-sort"/>
                                                </th>
                                                <th>
                                                    <a href="#" class="sort sort_by_pos_order_amount_total">Total</a>
                                                    <i class="fa fa-sort"/>
                                                </th>
                                                <!-- <th><a href="#" class="sort sort_by_pos_order_amount_paid">Paid</a><i class="fa fa-sort"/></th> -->
                                                <!-- <th><a href="#" class="sort sort_by_pos_order_amount_tax">Tax</a><i class="fa fa-sort"/></th> -->
                                                <th>
                                                    <a href="#">Seller</a>
                                                </th>
                                                <!-- <th><a href="#">Debit</a></th>
                                                <th><a href="#" class="sort sort_by_pos_order_state">State</a><i class="fa fa-sort"/></th> -->
                                            </tr>
                                        </thead>
                                        <tbody class='client-list-contents pos_order_list list_values_ship'>

                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </section>
                    </div>

                </section>


            </div>
            <div class="send_branch">
                <span class='button  send_shipment_to_branch'>
                                    Send to Branch
                    <i class='fa fa-angle-double-right'></i>
                </span>
            </div>
        </div>
    </t>


    <t t-extend="Orderline">

        <t t-jquery="li" t-operation="attributes">
            <attribute name="t-attf-class">orderline #{ line.selected ? 'selected' : '' } #{ line.is_sent ? 'disabled' : '' }</attribute>
        </t>
    </t>


    <t t-extend="OrderSelectorWidget">
        <t t-jquery=".order-selector" t-operation="replace">
            <div class="order-selector">
                <span class="orders touch-scrollable">

                    <t t-foreach="widget.pos.get_order_list()" t-as="order">
                        <t t-if='order === widget.pos.get_order()'>
                            <!-- <t t-debug="pdb"></t> --> 
                            <span t-attf-class="order-button select-order selected  #{ order.get_is_sent() ? 'order_is_sent' : '' }" t-att-data-uid="order.uid">
                                <span class='order-sequence'>
                                    <t t-esc='order.sequence_number' />
                                </span>
                                <t t-esc="moment(order.creation_date).format('hh:mm')"/>
                            </span>
                        </t>
                        <t t-if='order !== widget.pos.get_order()'>

                            <span t-attf-class="order-button select-order  #{ order.get_is_sent() ? 'order_is_sent' : '' }" t-att-data-uid="order.uid">
                                <span class='order-sequence'>
                                    <t t-esc='order.sequence_number' />
                                </span>
                            </span>
                        </t>
                    </t>
                </span>
                <span class="order-button square neworder-button">
                    <i class='fa fa-plus' role="img" aria-label="New order" title="New order"/>
                </span>
                <span class="order-button square deleteorder-button">
                    <i class='fa fa-minus' role="img" aria-label="Delete order" title="Delete order"/>
                </span>
            </div>
        </t>
    </t>

    <t t-extend="OrderWidget">
        <t t-jquery=".summary" t-operation="after">
               <!-- <t t-debug="pdb"></t>  -->
            <t t-if="order.get_sent_note()">
                <div class="line">
                    <h4>Nota:</h4>
                    <t t-esc='order.get_sent_note()'/>
                </div>
            </t>


        </t>
    </t>





